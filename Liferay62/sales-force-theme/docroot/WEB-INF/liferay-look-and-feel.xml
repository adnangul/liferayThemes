<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	<theme id="sales-force" name="Sales Force" >
		<settings>            
            <!-- Options for public users -->
            <setting
		        configurable="true"
		        key="show-sign-in-button-public-users"
		        type="checkbox"
		        value="false"
		    />
            <setting
		        configurable="true"
		        key="show-nav-public-users"
		        type="checkbox"
		        value="false"
		    />
		    
		    <!--  General Settings -->
		    <setting
		        configurable="true"
		        key="show-page-title"
		        type="checkbox"
		        value="true"
		    />
		    
	    	<!--  Portlet Borders -->
	    	<setting
		        configurable="true"
		        key="portlet-setup-show-borders-default"
		        type="checkbox"
		        value="false"
		    />
			<!--  Bullet Styles -->
		    <setting
		        configurable="true"
		        key="bullet-style"
		        type="select"
		        options="arrows,dots,classic,modern"
		        value="dots"
		    />
		    
		    <!-- Site Names configuration -->
		    <!-- 
		    <setting
		        configurable="true"
		        key="show-site-name-default"
		        type="checkbox"
		        value="true"
		    />
		    <setting
		        configurable="true"
		        key="show-site-name-supported"
		        type="checkbox"
		        value="true"
		    /> 
		   -->
		   
		   <setting configurable="true"
	             key="slogan"
	             type="textarea"
	             value=""
		    />
	    	<setting configurable="true"
	             key="display-slogan-footer"
	             type="checkbox"
	             value="true"
	    	/>
        </settings>
        
        <!-- 
        <color-scheme id="01" name="Day">
	        <css-class>day</css-class>
	        <color-scheme-images-path>
	            ${images-path}/color_schemes/${css-class}
	        </color-scheme-images-path>
	    </color-scheme>
	    <color-scheme id="02" name="Night">
	        <css-class>night</css-class>
	    </color-scheme>
	     -->	    
	</theme>
</look-and-feel>